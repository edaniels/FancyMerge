{
  "manifest_version": 2,

  "name": "FancyMerge",
  "description": "This extension is magic.",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["*://github.com/*/*/pull/*"],
      "js": ["jquery-2.1.3.min.js", "contentscript.js"],
      "run_at": "document_end"  
    }
  ],

  "background": {
    "scripts": ["jquery-2.1.3.min.js", "background.js"],
    "persistent": false
  },

  "permissions": ["activeTab", "*://localhost/*"],

  "web_accessible_resources": ["fancyButton.js"],

  "externally_connectable": {
    "matches": ["*://github.com/*/*/pull/*"]
  }
}